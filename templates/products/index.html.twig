{% extends 'base.html.twig' %}

{% block title %}Guma - Shop
{% endblock %}

{% block body %}
	<div class="container mt-4 ">
		<h1>Mes Produits</h1>

		<div class="produit d-flex justify-content-between mt-4">
			{% for products in products %}
				<div class="card mb-3 ">
					<h3 class="card-header">{{products.name}}</h3>
					<svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice" viewbox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
						<rect width="100%" height="100%" fill="#868e96"></rect>
						<text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
					</svg>
					<div class="card-body">
						<p class="card-text">{{products.description}}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{products.price}}</li>
					</ul>
					<div class="card-body">
						<a href="#" class="card-link">Achater</a>
						<a href="#" class="card-link">Panier</a>
					</div>
					<div class="card-footer text-muted">
						2 days ago
					</div>
				</div>

			{% endfor %}
		</div>

		<div class="navigation d-flex justify-content-center">
			{{ knp_pagination_render(products) }}
		</div>
	</div>
{% endblock %}
